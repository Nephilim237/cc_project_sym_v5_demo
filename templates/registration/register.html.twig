{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <section>
        <div class="container py-5">

            {% for flashError in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}

            <div class="row">
                <div class="col-md-7 col-sm">

                </div>
                <div class="col-md-5 col-sm ms-auto">
                    <div class="card">
                        <div class="card-header">
                            <h1 class="b-title fs-2 mb-2">Inscription</h1>
                        </div>
                        <div class="card-body border-top border-warning">
                            {{ form_start(registrationForm) }}
                            <div class="field">
                                {{ form_label(registrationForm.lastName, 'Votre nom: ' , {'attr': {'class': 'form-label'}}) }}
                                <div class="input-group mb-3">
                                    <span class="input-group-text" id="basic-name"><i class="fas fa-user"></i></span>
                                    {{ form_widget(registrationForm.lastName, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="field">
                                {{ form_label(registrationForm.firstName, 'Votre prénom: ' , {'attr': {'class': 'form-label'}}) }}
                                <div class="input-group mb-3">
                                    <span class="input-group-text" id="basic-name"><i class="fas fa-user"></i></span>
                                    {{ form_widget(registrationForm.firstName, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="field">
                                {{ form_label(registrationForm.email, 'Votre email: ' , {'attr': {'class': 'form-label'}}) }}
                                <div class="input-group mb-3">
                                    <span class="input-group-text" id="basic-name"><i class="fas fa-at"></i></span>
                                    {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="field">
                                {{ form_label(registrationForm.plainPassword, 'Mot de passe: ' , {'attr': {'class': 'form-label'}}) }}
                                <div class="input-group mb-3">
                                    <span class="input-group-text" id="basic-name"><i class="fas fa-lock"></i></span>
                                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="field">
                                {{ form_label(registrationForm.speciality, 'Spécialité: ' , {'attr': {'class': 'form-label'}}) }}
                                <div class="input-group mb-3">
                                    <span class="input-group-text" id="basic-name"><i class="fas fa-user-tag"></i></span>
                                    {{ form_widget(registrationForm.speciality, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-check mb-3">
                                {{ form_label(registrationForm.agreeTerms, 'Termes et conditions', {'attr': {'class': 'form-check-label'}}) }}
                                {{ form_widget(registrationForm.agreeTerms) }}

                            </div>
                            <div class="d-flex justify-content-end mb-3">
                                <button type="submit" class="cc-btn cc-btn-outline cc-btn-big">S'inscrire</button>
                            </div>

                            {{ form_end(registrationForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
