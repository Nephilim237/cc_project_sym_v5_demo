{% extends 'base.html.twig' %}

{% block body %}
    <section class="course-add">
        <div class="container py-5">
            <div class="row">
                <div class="col-md-10 col-sm mx-auto">
                    <div class="card">
                        <div class="card-header">
                            <h1 class="b-title fs-2 mb-2">Ajouter un cours</h1>
                        </div>
                        <div class="card-body border-top border-orange">
                            {{ form_start(form) }}
                            <div class="field">
                                {{ form_label(form.title) }}
                                <div class="input-group mb-3">
                                    <span class="input-group-text" id="title"><i class="fas fa-heading"></i></span>
                                    {{ form_widget(form.title) }}
                                </div>
                            </div>
                            <div class="field">
                                {{ form_label(form.banner) }}
                                <div class="input-group mb-3">
                                    <span class="input-group-text" id="title"><i class="fas fa-image"></i></span>
                                    {{ form_widget(form.banner) }}
                                </div>
                            </div>
                            <div class="field">
                                {{ form_label(form.description) }}
                                <div class="mb-3">
                                    {{ form_widget(form.description) }}
                                </div>
                            </div>
                            <div class="field">
                                <div class="input-group mb-3">
                                    {{ form_label(form.category) }}
                                    {{ form_widget(form.category) }}
                                </div>
                            </div>
                            <div class="field">
                                {{ form_label(form.price) }}
                                <div class="input-group mb-3">
                                    <span class="input-group-text" id="title"><i class="fas fa-dollar"></i></span>
                                    {{ form_widget(form.price) }}
                                </div>
                            </div>
                            <div class="d-flex justify-content-end">
                                <button class="cc-btn cc-btn-outline">Publier</button>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block title %}Ajouter un cour{% endblock %}

