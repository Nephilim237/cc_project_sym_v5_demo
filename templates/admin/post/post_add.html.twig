{% extends 'admin/base.html.twig' %}


{% block body %}
    <section>
        <div class="container py-5">
            <div class="row">
                <div class="col-md-10 col-sm mx-auto">
                    <div class="card">

                        <div class="card-header">
                            <div class="row">
                                <div class="col-md-4">
                                    <h5 class="">Publier un article</h5>
                                </div>
                                <div class="col-md-8">
                                    <div class="d-flex justify-content-end">
                                        <a href="{{ path('post_home') }}" class="btn-admin"> <i
                                                    class="fas fa-clipboard"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body border-top border-orange">
                            {{ form_start(postForm) }}
                            <div class="field">
                                {{ form_label(postForm.title) }}
                                <div class="input-group mb-3">
                                    <span class="input-group-text" id="title"><i class="fas fa-heading"></i></span>
                                    {{ form_widget(postForm.title) }}
                                </div>
                            </div>
                            <div class="field">
                                {{ form_label(postForm.content) }}
                                <div class="mb-3">
                                    {{ form_widget(postForm.content) }}
                                </div>
                            </div>
                            <div class="field">
                                <div class="input-group mb-3">
                                    {{ form_label(postForm.category) }}
                                    {{ form_widget(postForm.category) }}
                                </div>
                            </div>
                            <div class="field">
                                <div class="input-group mb-3">
                                    {{ form_widget(postForm.images) }}
                                </div>
                            </div>
                            <div class="d-flex justify-content-end">
                                <button class="cc-btn cc-btn-outline">Publier <i class="fas fa-plus"></i></button>
                            </div>
                            {{ form_end(postForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}


{% block title %}
    Publier un article
{% endblock %}

