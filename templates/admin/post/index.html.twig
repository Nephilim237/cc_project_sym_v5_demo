{% extends 'base.html.twig' %}

{% block title %}Gérer les posts{% endblock %}

{% block body %}
    <section>
        <div class="container py-5">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-4">
                            <h6>Liste des posts</h6>
                        </div>
                        <div class="col-md-8">
                            <div class="d-flex justify-content-end">
                                <a href="{{ path('post_add') }}" class="btn-admin"> <i class="fas fa-plus"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Titre</th>
                                <th scope="col">Auteur</th>
                                <th scope="col">Activé</th>
                                <th scope="col">Publié le</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for post in posts %}
                                <tr>
                                    <th scope="row">{{ post.id }}</th>
                                    <td>{{ post.title }}</td>
                                    <td>{{ post.author.fullName }}</td>
                                    <td>{{ post.active }}</td>
                                    <td>{{ post.createdAt | date("Y-m-d H:i") | format_datetime('medium', 'short', locale='fr') }}</td>
                                    <td> 
                                        <a href="{{ path('post_edit', {id: post.id}) }}" class="btn-admin"> <i
                                                    class="far fa-edit"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row">
                <div class="col"></div>
            </div>
        </div>
    </section>
{% endblock %}
