{% extends 'admin/base.html.twig' %}

{% block body %}
    <section>
        <div class="container py-5">
            <div class="row">
                <div class="col-md-8 col-sm mx-auto">
                    <div class="card">
                        <div class="card-header">
                            <h1 class="b-title fs-2 mb-2">Ajouter une catégorie</h1>
                        </div>
                        <div class="card-body">
                            {{ form_start(form) }}
                            <div class="mb-3">
                                {{ form_label(form.title, 'Nom de la catégorie: ', {'attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.title, {'attr': {'class': 'cc-form-control'}}) }}
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.parent, 'Groupe: ', {'attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.parent, {'attr': {'class': 'form-select'}}) }}
                            </div>
                            <button type="submit" class="cc-btn">Ajouter</button>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block title %}
    Ajouter une catégorie
{% endblock %}

